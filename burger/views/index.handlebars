<h1>Eat Da Burger!</h1>

<h2>Ready to Devour</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{!-- {{> burgers devoured=true}} --}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{!-- {{> burgers devoured=false}} --}}
    {{/if}}
  {{/each}}
</ul>

<h2>What Burger are you eating NEXT!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Have you devoured this burger or no?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Ready to Devour
  </div>

  <button type="submit">Add Burger</button>
</form>
